{
	"name": "micro-blog",
	"version": "1.0.0",
	"description": "Minimal markdown to HTML blog generator",
	"type": "module",
	"engines": {
		"node": ">=24.0.0"
	},
	"bin": {
		"micro-blog": "./bin/micro-blog"
	},
	"files": [
		"bin/",
		"lib/"
	],
	"scripts": {
		"build": "bin/micro-blog build",
		"dev": "bin/micro-blog",
		"format": "biome format --write",
		"loc": "find lib -type f | xargs wc -l"
	},
	"dependencies": {
		"marked": "^12.0.0",
		"polka": "^0.5.2",
		"sirv": "^3.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11"
	}
}
